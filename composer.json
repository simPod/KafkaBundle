{
    "name": "simpod/kafka-bundle",
    "description": "Kafka Symfony bundle.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "ext-pcntl": "*",
        "ext-rdkafka": "*",
        "psr/log": "^1.0",
        "symfony/config": "^4.3",
        "symfony/console": "^4.3",
        "symfony/contracts": "^1.1",
        "symfony/dependency-injection": "^4.3",
        "symfony/event-dispatcher": "^4.3",
        "symfony/framework-bundle": "^4.3"
    },
    "require-dev": {
        "doctrine/coding-standard": "^6.0",
        "kwn/php-rdkafka-stubs": "^1.0",
        "phpstan/phpstan": "^0.11.5",
        "phpstan/phpstan-phpunit": "^0.11.0",
        "phpstan/phpstan-strict-rules": "^0.11.0",
        "phpunit/phpunit": "^8.0",
        "symfony/yaml": "^4.3"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\KafkaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\KafkaBundle\\Tests\\": "tests/"
        }
    }
}
