{
    "name": "simpod/kafka-bundle",
    "description": "Kafka Symfony bundle.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "symfony/config": "^4.3",
        "symfony/console": "^4.3",
        "symfony/contracts": "^1.1",
        "symfony/dependency-injection": "^4.3",
        "symfony/framework-bundle": "^4.3",
        "thecodingmachine/safe": "^0.1.16"
    },
    "require-dev": {
        "doctrine/coding-standard": "^6.0",
        "phpstan/phpstan": "0.11.19",
        "phpstan/phpstan-phpunit": "0.11.2",
        "phpstan/phpstan-strict-rules": "0.11.1",
        "phpunit/phpunit": "^8.4",
        "simpod/kafka": "dev-drop-flush",
        "symfony/yaml": "^4.3",
        "thecodingmachine/phpstan-safe-rule": "^0.1.3"
    },
    "suggest": {
        "kwn/php-rdkafka-stubs": "Support and autocompletion for RDKafka in IDE | require as dev dependency"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\KafkaBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\KafkaBundle\\Tests\\": "tests/"
        }
    }
}
